<AppConfig>

  <!-- *_*_* OUTPUT *_*_* -->
  <output>
    <!-- Output resolution of the projector -->
    <projector_width>360</projector_width>
    <projector_height>700</projector_height>
    <!-- Internal buffer for projector output. The size and the aspect ratio of this buffer are key to the performance but also precision of the rendering. Depending on the projector resolution, usually half the resolution works well with the current implementation. -->
    <buffer_width>360</buffer_width>
    <buffer_height>700</buffer_height>
  </output>

  <!-- *_*_* KINECT *_*_* -->
  <kinect>
    <!-- This buffer should not be smaller than the depth buffer of the Kinect (640x480), and also have the same aspect ratio as the output depth buffer above. -->
    <crop_buffer_width>360</crop_buffer_width>
    <crop_buffer_height>700</crop_buffer_height>
  </kinect>

  <!-- *_*_* PARTICLE SYSTEM *_*_* -->
  <vector_field>
    <!-- The subdivision of the vector field relates to both buffers - the output buffer and the crop buffer. The greater the subdivision, the more precise the particle movement affected by the vector field is. -->
    <subdivision_x>24</subdivision_x> <!-- 15px horizontal increment step size in crop buffer -->
    <subdivision_y>50</subdivision_y> <!-- 14px vertical increment step size in crop buffer -->
  </vector_field>

  <!-- *_*_* PARTICLE SYSTEM *_*_* -->
  <particle_system>
    <!-- The total amount of particles in the system. -->
    <count>75</count>
    <!-- Range for the random generation of the radius for each particle. -->
    <min_radius>20.0</min_radius>
    <max_radius>30.0</max_radius>
  </particle_system>

  <!-- *_*_* MARCHING SQUARES *_*_* -->
  <marching_squares>
    <!-- Subdivision of the output buffer. The greater the subdivision, the higher the quality of the shapes generated by the particles, but also the higher the computational demand per cycle. This subdivision is crucial to get a decent overall application performance. -->
    <columns>24</columns> <!-- 15px horizontal increment step size in output buffer -->
    <rows>50</rows> <!-- 15px vertical increment step size in output buffer -->
  </marching_squares>
  
  <!-- *_*_* COLORS *_*_* -->
  <colors>
    <background hue="0.0" saturation="0.0" brightness="0.0" alpha="1.0" />
    <metaballs hue="0.0" saturation="0.0" brightness="0.85" alpha="1.0" />
  </colors>

</AppConfig>
